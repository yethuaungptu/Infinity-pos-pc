# Database Configuration
# Copy this file to .env and update with your actual values

# ================================
# CLOUD DATABASE (PostgreSQL)
# ================================
# Format: postgresql://username:password@host:port/database?schema=public
DATABASE_URL="postgresql://agripos_user:your_password@localhost:5432/agripos_production?schema=public"

# Development database
DATABASE_URL_DEV="postgresql://agripos_user:your_password@localhost:5432/agripos_development?schema=public"

# Test database
DATABASE_URL_TEST="postgresql://agripos_user:your_password@localhost:5432/agripos_test?schema=public"

# ================================
# LOCAL DATABASE (SQLite - for offline mode)
# ================================
LOCAL_DATABASE_URL="file:./agripos_local.db"

# ================================
# APPLICATION SETTINGS
# ================================
NODE_ENV="development"
APP_VERSION="1.0.0"

# ================================
# STORE CONFIGURATION
# ================================
STORE_NAME="AgriSupply Store"
STORE_ADDRESS="123 Farm Road, Agriculture Valley, CA 93444"
STORE_PHONE="+1 (555) 123-4567"
STORE_EMAIL="info@agrisupply.com"
STORE_TAX_RATE="8.25"
STORE_CURRENCY="USD"
STORE_TIMEZONE="America/Los_Angeles"

# ================================
# PAYMENT PROCESSING
# ================================
# Stripe Configuration
STRIPE_SECRET_KEY="sk_test_your_stripe_secret_key"
STRIPE_PUBLISHABLE_KEY="pk_test_your_stripe_publishable_key"
STRIPE_WEBHOOK_SECRET="whsec_your_webhook_secret"

# Square Configuration
SQUARE_APPLICATION_ID="your_square_application_id"
SQUARE_ACCESS_TOKEN="your_square_access_token"
SQUARE_ENVIRONMENT="sandbox" # or "production"

# PayPal Configuration
PAYPAL_CLIENT_ID="your_paypal_client_id"
PAYPAL_CLIENT_SECRET="your_paypal_client_secret"
PAYPAL_ENVIRONMENT="sandbox" # or "production"

# ================================
# PRINTER CONFIGURATION
# ================================
THERMAL_PRINTER_IP="192.168.1.100"
THERMAL_PRINTER_PORT="9100"
THERMAL_PAPER_WIDTH="58" # 58mm or 80mm
AUTO_OPEN_DRAWER="true"
PRINT_LOGO="true"

# ================================
# SYNC CONFIGURATION
# ================================
AUTO_SYNC_ENABLED="true"
SYNC_INTERVAL_MINUTES="5"
OFFLINE_MODE="false"
CONFLICT_RESOLUTION="server_wins" # "server_wins", "local_wins", "manual"

# ================================
# EMAIL NOTIFICATIONS
# ================================
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER="your_email@gmail.com"
SMTP_PASSWORD="your_app_password"
EMAIL_FROM="AgriPOS System <noreply@agrisupply.com>"

# ================================
# NOTIFICATION SETTINGS
# ================================
LOW_STOCK_ALERTS="true"
LOW_STOCK_THRESHOLD="10"
PAYMENT_REMINDERS="true"
QUALITY_ALERTS="true"
SYSTEM_ALERTS="true"
SOUND_NOTIFICATIONS="true"

# ================================
# BACKUP CONFIGURATION
# ================================
AUTO_BACKUP="true"
BACKUP_INTERVAL_HOURS="24"
BACKUP_RETENTION_DAYS="30"
BACKUP_LOCATION="./backups"

# Cloud backup (optional)
AWS_ACCESS_KEY_ID="your_aws_access_key"
AWS_SECRET_ACCESS_KEY="your_aws_secret_key"
AWS_S3_BUCKET="agripos-backups"
AWS_REGION="us-west-2"

# ================================
# SECURITY
# ================================
JWT_SECRET="your_super_secret_jwt_key_change_this_in_production"
ENCRYPTION_KEY="your_32_character_encryption_key_here"
SESSION_SECRET="your_session_secret_key"

# ================================
# DEVELOPMENT TOOLS
# ================================
# Prisma Studio
PRISMA_STUDIO_PORT="5555"

# Debug logging
DEBUG_MODE="false"
LOG_LEVEL="info" # "error", "warn", "info", "debug"

# ================================
# ELECTRON SPECIFIC
# ================================
ELECTRON_IS_DEV="true"
AUTO_UPDATER_URL="https://your-update-server.com"
UPDATE_CHECK_INTERVAL="24" # hours

# ================================
# API INTEGRATIONS
# ================================
# Market data for egg pricing
EGG_MARKET_API_KEY="your_market_api_key"
EGG_MARKET_API_URL="https://api.eggmarket.com/v1"

# Weather API (for collection planning)
WEATHER_API_KEY="your_weather_api_key"
WEATHER_API_URL="https://api.openweathermap.org/data/2.5"

# ================================
# ANALYTICS (Optional)
# ================================
GOOGLE_ANALYTICS_ID="GA-XXXXXXXXX"
MIXPANEL_TOKEN="your_mixpanel_token"

# ================================
# ERROR TRACKING (Optional)
# ================================
SENTRY_DSN="https://your_sentry_dsn@sentry.io/project_id"